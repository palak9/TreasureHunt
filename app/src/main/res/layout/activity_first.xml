<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity"
    android:background="@drawable/hint_background"
    android:padding="15dp">

    <Button
        android:id="@+id/level1"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:layout_above="@+id/coin2"
        android:layout_toEndOf="@+id/coin2"
        android:background="@color/colorPrimary"
        android:text="Level 1"
        android:textSize="25dp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/coin1"
        android:layout_width="63dp"
        android:layout_height="61dp"
        android:layout_alignStart="@+id/rules"
        android:layout_alignTop="@+id/level1"
        android:background="@drawable/fcoin"
        tools:ignore="UnknownId" />

    <Button
        android:id="@+id/level2"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/level1"
        android:layout_below="@+id/coin1"
        android:background="@color/colorPrimary"
        android:text="Level 2"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/coin2"
        android:layout_width="63dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/coin1"
        android:layout_marginBottom="142dp"
        android:background="@drawable/fcoin"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:text="Lets Begin..."
        android:textColor="#5B3413"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rules"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Rules before you begin the Hunt !\n \n> You have 20 mins to solve 5 clues. \n> Scores will be as per your performance."
        android:textColor="#5B3413"
        android:textSize="23dp"
        android:textStyle="bold" />


</RelativeLayout>