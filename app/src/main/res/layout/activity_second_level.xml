<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hint_background"
    android:padding="15sp"
    tools:context=".SecondLevel">

    <TextView
        android:id="@+id/clue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/marquee"
        android:layout_marginTop="47dp"
        android:text="CLUE ...."
        android:textColor="#5B3413"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/marquee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fadingEdge="horizontal"
        android:ellipsize="marquee"
        android:freezesText="true"
        android:text="One Step towards Treasure ! "
        android:textColor="#5B3413"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/hintquestion"
        android:layout_width="328dp"
        android:layout_height="187dp"
        android:layout_below="@+id/clue"
        android:layout_centerHorizontal="true"
        android:text="Upside Down, Round and Round, what do you wear to walk on Ground!"
        android:textColor="#5B3413"
        android:textSize="30sp"
        android:textStyle="bold|italic" />





    <EditText
        android:id="@+id/ans"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/marquee"
        android:layout_marginBottom="188dp"
        android:ems="10"
        android:hint="Your Answer Please"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ans"
        android:layout_marginEnd="18dp"
        android:backgroundTint="#cc8522"
        android:text="CHECK"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/small_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/marquee"
        android:layout_below="@+id/ans"
        android:layout_marginTop="-188dp"
        android:text="(Hint: Only one word)"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:background="#cc8522"
        android:text="00:00"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#5B3413"
        android:textSize="30sp"
        tools:ignore="RtlCompat" />


</RelativeLayout>